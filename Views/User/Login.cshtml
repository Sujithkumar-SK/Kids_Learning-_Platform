@model KidsLearningPlatform.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center mb-4">Login</h2>

<form method="post" asp-controller="User" asp-action="Login" class="mx-auto" style="max-width: 400px;">
    <div class="mb-3">
        <label asp-for="Username" class="form-label"></label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <!-- âœ… Sign Up Link -->
    <div class="mb-3 text-center">
        <span>New User?</span>
        <a asp-controller="User" asp-action="Signup" class="text-decoration-none">Create an account</a>
    </div>

    <button type="submit" class="btn btn-primary w-100">Login</button>

    @if (ViewBag.Message != null)
    {
        <div class="mt-3 alert alert-danger">
            @ViewBag.Message
        </div>
    }

    @if (TempData["Message"] != null)
    {
        <div class="mt-3 alert alert-success">
            @TempData["Message"]
        </div>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
